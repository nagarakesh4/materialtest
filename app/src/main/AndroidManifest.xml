<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="materialtest.sanjose.venkata.materialtest" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="materialtest.sanjose.venkata.instance.ApplicationInstance"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="materialtest.sanjose.venkata.activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="materialtest.sanjose.venkata.activities.SubActivity"
            android:label="@string/title_activity_sub" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="materialtest.sanjose.venkata.activities.MainActivity" />
        </activity>
        <activity
            android:name="materialtest.sanjose.venkata.activities.UsingTabLibrary"
            android:label="@string/title_activity_using_tab_library" >
        </activity>
        <activity
            android:name="materialtest.sanjose.venkata.activities.VectorTestActivity"
            android:label="@string/title_activity_vector_test" >
        </activity>
        <activity
            android:name="materialtest.sanjose.venkata.activities.MovieTabActivity"
            android:label="@string/title_activity_movie_tab" >
        </activity>
    </application>

</manifest>
